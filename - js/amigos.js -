import { appState } from "./appState.js"; // âœ… Accede al estado global de la app
import { setupGlobalEventListeners } from "./eventListeners.js"; // âœ… Accede a los eventos globales

export function initAmigos() {
    console.log("âœ… MÃ³dulo Amigos de Hidora inicializado correctamente.");

    const readMoreBtn = document.querySelector(".read-more-amigos");
    const amigosModulo = document.querySelector("#amigos-modulo");

    if (!readMoreBtn || !amigosModulo) {
        console.warn("âš ï¸ No se encontrÃ³ el botÃ³n o el mÃ³dulo de amigos.");
        return;
    }

    readMoreBtn.addEventListener("click", () => {
        console.log("âœ… Click en 'Seguir leyendo' registrado.");
        const isVisible = amigosModulo.classList.contains("visible");

        amigosModulo.classList.toggle("visible", !isVisible);
        amigosModulo.classList.toggle("hidden", isVisible);
        readMoreBtn.textContent = isVisible ? "Seguir leyendo" : "Ocultar secciÃ³n";

        console.log(`ðŸ“– MÃ³dulo Amigos ahora estÃ¡ ${isVisible ? "oculto" : "visible"}.`);
    });

    console.log("ðŸ”Ž Estado del botÃ³n:", readMoreBtn);
}

document.addEventListener("DOMContentLoaded", () => {
    console.log("âœ… Documento completamente cargado.");
    initAmigos(); // âœ… Llama a `initAmigos()` directamente en `DOMContentLoaded`
});
